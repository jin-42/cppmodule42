NAME	= 	toexec
CC 		=	c++
CFLAGS	=	-Wall -Wextra -Werror -std=c++98
OBJ_DIR = 	obj

SRCS	=	main.cpp Harl.cpp

HEADERS =   Harl.hpp

OBJS	=	$(SRCS:.cpp=.o)

all				: $(NAME)

$(NAME)			: $(OBJS)
