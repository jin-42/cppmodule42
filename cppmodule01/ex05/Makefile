				@echo "⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠉⠁⠀⠀⠸⣿⣿⠁⠀⠀⠀⠀⠀⠀⠀"
				$(CC) $(CFLAGS) -o $@ $(OBJS)

%.o: %.cpp $(HEADERS)
				$(CC) $(CFLAGS) -MMD -MP -c $< -o $@

-include $(OBJ:%.o=%.d)

clean:
	rm -rf $(OBJS)  $(OBJS:.o=.d)

fclean: clean
	rm -rf $(NAME)

re: fclean all

.PHONY: all clean fclean re